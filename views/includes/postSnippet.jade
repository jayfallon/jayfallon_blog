div.post
  h2
    a(href=post.url)
      = post.title
  span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()} 
  div.content
    != post.preview
  div.tags
    - if (post.tags)
      p 
        | tagged with:&nbsp;
        - each tag in post.tags
          a.tags(href=tagUrl(tag)) #{tag}
