extends layout

block content
  div.post
    h1
      = post.title
    span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
    div.content
      != post.content
      div.tags
        - if (post.tags)
          p 
            | tagged with:&nbsp;
            - each tag in post.tags
              a.tags(href=tagUrl(tag)) #{tag}
